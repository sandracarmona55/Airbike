
<!-- Div for the filters -->
<div class="d-flex flex-row page-margin py-3">
  <button class="bg-white py-2 px-5" type="button">Dates</button>
  <button class="bg-white py-2 px-5 mx-2" type="button">Type</button>
</div>

<div class="index-cards">
  <!-- Div of all the cards in grid form -->
  <div class="bike-cards">
    <%  @bikes.each do |bike| %>
    <div class="bike-card">
      <div class="div-image">
        <%= cl_image_tag bike.photo, class: "bike-image" %>
      </div>
      <div class="text-card">
        <h3 class="card-info"><%= link_to bike.name, bike_path(bike) %></h3>
        <p class="card-info"><%= link_to bike.description.truncate(85), bike_path(bike) %></p>
      </div>
    </div>
    <% end %>
  </div>
  <!-- Div of the map -->
  <div>
    <%= cl_image_tag("a2e71ff42u6p01bvtwbb", id: "map") %>
  </div>
</div>

<%= link_to new_bike_path do %>
  <i class="fa fa-plus"></i> Add a new bike
<% end %>

