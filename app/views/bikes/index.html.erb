<div class="index-cards my-4 mx-4">
  <!-- Div of all the cards in grid form -->

  <div class="bike-cards">

    <%  @bikes.each do |bike| %>
    <a class="link-none" href="<%= bike_path(bike) %>">
    <div class="bike-card">
      <div class="div-image">
        <%= cl_image_tag bike.photo, class: "bike-image" %>
      </div>
      <div class="text-card">
        <h3 class="card-info"><%=bike.name%></h3>
        <p class="card-info"><%=bike.description.truncate(75) %></p>
        <h5 class="price"> <%= bike.price %>â‚¬ </h5>
      </div>
    </div></a>
    <% end %>
  </div>
  <!-- Div of the map -->
  <div id="map" style="width: 100%; height: 500px;"
