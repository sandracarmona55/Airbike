<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-md-5">
      <h2 class="text-center">Post your bike!</h2>
      <%= simple_form_for (@bike) do |f| %>
      <%= f.input :name %>
      <%= f.input :description%>
      <%= f.input :address%>
      <%= f.input :category, :collection => %w[Mountainbike Citybike Tandem Race Other] %>
      <%= f.input :price%>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="btn-submit form-actions text-center">
        <%= f.button :submit, "Create a Post" %>
      </div>
      <% end %>
      <button class="btn-back my-2 rounded-lg font-weight-light">
        <%= link_to "Back to all bikes", bikes_path %>
      </button>
    </div>
  </div>
</div>
