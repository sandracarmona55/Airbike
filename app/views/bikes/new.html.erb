<div class="page-container" style="height: 100vh; background-image: url(https://images.unsplash.com/photo-1526810961994-1c496b463907?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1347&q=80)">
</div>
  <%= link_to "<<", bikes_path, class: "btn-back-to-bikes" %>
      <div class="form-bike shadow-sm p-3 bg-white rounded">
        <h2 class="text-center" style="color:#FD894A">Post your bike!</h2>
        <%= simple_form_for (@bike) do |f| %>
          <%= f.input :name, label: "Name of the bike"%>
          <%= f.input :description%>
          <%= f.input :address%>
          <%= f.input :category, :collection => %w[Mountainbike Citybike Tandem Race Electric Other] %>
          <%= f.input :price%>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <div class="btn-submit form-actions text-center">
            <%= f.button :submit, "Post your bike" %>
          </div>
        <% end %>
      </div>
